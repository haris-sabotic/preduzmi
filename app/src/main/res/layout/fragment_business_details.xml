<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.business_details.BusinessDetailsFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:src="@drawable/logo"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_button_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="@id/logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@color/black"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/button_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_favorite_border_24"
                android:background="@drawable/rounded_image_button"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintEnd_toStartOf="@id/button_save"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp" />

            <ImageButton
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_bookmark_border_24"
                android:background="@drawable/rounded_image_button"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintEnd_toEndOf="@id/image" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:letterSpacing="0"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_type_below_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:letterSpacing="0.01"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/text_name"
                app:layout_constraintStart_toStartOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@color/black"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_name"
                app:layout_constraintBottom_toBottomOf="@id/text_type_below_name" />


            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="24sp"
                app:layout_constraintTop_toBottomOf="@id/text_type_below_name"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/text_legal_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privredno druÅ¡tvo: "
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="15dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/text_description"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_legal_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/text_legal_type_label"
                app:layout_constraintBottom_toBottomOf="@id/text_legal_type_label"
                app:layout_constraintStart_toEndOf="@id/text_legal_type_label" />


            <TextView
                android:id="@+id/text_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tip biznisa: "
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/text_legal_type_label"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/text_type_label"
                app:layout_constraintBottom_toBottomOf="@id/text_type_label"
                app:layout_constraintStart_toEndOf="@id/text_type_label" />


            <TextView
                android:id="@+id/text_author_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preduzetnik: "
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/text_type_label"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/text_author_label"
                app:layout_constraintBottom_toBottomOf="@id/text_author_label"
                app:layout_constraintStart_toEndOf="@id/text_author_label" />


            <TextView
                android:id="@+id/text_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontakt: "
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/text_author_label"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/text_phone_label"
                app:layout_constraintBottom_toBottomOf="@id/text_phone_label"
                app:layout_constraintStart_toEndOf="@id/text_phone_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
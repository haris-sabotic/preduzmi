<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_splash">

    <fragment
        android:id="@+id/navigation_splash"
        android:name="com.ets.preduzmi.ui.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_login"
            app:popUpTo="@+id/navigation_splash"
            app:popUpToInclusive="true"
            app:destination="@+id/navigation_login" />
        <action
            android:id="@+id/action_splash_to_home"
            app:popUpTo="@+id/navigation_splash"
            app:popUpToInclusive="true"
            app:destination="@+id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ets.preduzmi.ui.businesses.BusinessesFragment"
        android:label="Početna"
        tools:layout="@layout/fragment_businesses">
        <action
            android:id="@+id/action_home_to_business_details"
            app:destination="@+id/navigation_business_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.ets.preduzmi.ui.search.SearchFragment"
        android:label="Pretraga"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_search_to_business_details"
            app:destination="@+id/navigation_business_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_your_posts"
        android:name="com.ets.preduzmi.ui.your_posts.YourPostsFragment"
        android:label="Tvoje objave"
        tools:layout="@layout/fragment_your_posts">
        <action
            android:id="@+id/action_your_posts_to_new_post"
            app:destination="@id/navigation_new_post" />
        <action
            android:id="@+id/action_your_posts_to_edit_post"
            app:destination="@id/navigation_edit_post" />
        <action
            android:id="@+id/action_your_posts_to_business_details"
            app:destination="@+id/navigation_business_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.ets.preduzmi.ui.profile.ProfileFragment"
        android:label="Profil"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_edit_profile"
            app:destination="@id/navigation_edit_profile" />
        <action
            android:id="@+id/action_profile_to_business_details"
            app:destination="@+id/navigation_business_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.ets.preduzmi.ui.auth.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_register"
            app:popUpTo="@+id/navigation_login"
            app:popUpToInclusive="true"
            app:destination="@id/navigation_register" />
        <action
            android:id="@+id/action_login_to_home"
            app:popUpTo="@+id/navigation_login"
            app:popUpToInclusive="true"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_register"
        android:name="com.ets.preduzmi.ui.auth.RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_register_to_login"
            app:popUpTo="@+id/navigation_register"
            app:popUpToInclusive="true"
            app:destination="@id/navigation_login" />
        <action
            android:id="@+id/action_register_to_home"
            app:popUpTo="@+id/navigation_register"
            app:popUpToInclusive="true"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_business_details"
        android:name="com.ets.preduzmi.ui.business_details.BusinessDetailsFragment"
        tools:layout="@layout/fragment_business_details">
        <argument
            android:name="businessModel"
            app:argType="com.ets.preduzmi.models.BusinessModel" />
    </fragment>

    <fragment
        android:id="@+id/navigation_new_post"
        android:name="com.ets.preduzmi.ui.new_post.NewPostFragment"
        tools:layout="@layout/fragment_new_post">
        <action
            android:id="@+id/action_new_post_to_your_posts"
            app:popUpTo="@+id/navigation_new_post"
            app:popUpToInclusive="true"
            app:destination="@id/navigation_your_posts" />
    </fragment>

    <fragment
        android:id="@+id/navigation_edit_post"
        android:name="com.ets.preduzmi.ui.edit_post.EditPostFragment"
        tools:layout="@layout/fragment_edit_post">
        <action
            android:id="@+id/action_edit_post_to_your_posts"
            app:popUpTo="@+id/navigation_edit_post"
            app:popUpToInclusive="true"
            app:destination="@id/navigation_your_posts" />
        <argument
            android:name="businessModel"
            app:argType="com.ets.preduzmi.models.BusinessModel" />
    </fragment>

    <fragment
        android:id="@+id/navigation_edit_profile"
        android:name="com.ets.preduzmi.ui.edit_profile.EditProfileFragment"
        tools:layout="@layout/fragment_edit_profile">
        <argument
            android:name="userModel"
            app:argType="com.ets.preduzmi.models.UserModel" />
    </fragment>
</navigation>